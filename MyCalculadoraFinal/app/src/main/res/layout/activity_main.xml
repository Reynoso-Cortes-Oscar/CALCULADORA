<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232223"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#96F8CD"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:text=""
        android:textColor="#0000ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="4">

        <Button
            android:id="@+id/ac"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="AC"
            android:textColor="#FF0000"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/power"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="^"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/back"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="←"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/div"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="÷"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="4">

        <Button
            android:id="@+id/btn7"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="7"
            android:textColor="#000"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn8"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn9"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/mul"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="×"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="4">

        <Button
            android:id="@+id/btn4"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="4"
            android:textColor="#000"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn5"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn6"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/suma"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="1"
            android:textColor="#000"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn2"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/btn3"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/res"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="4">

        <Button
            android:id="@+id/btn0"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="0"
            android:textColor="#000"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:onClick="ButtonClick"
            android:text="."
            android:textColor="@color/black"
            android:textSize="48sp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/ans"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="Ans"
            android:textColor="@color/black"
            android:textSize="27dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/igual"
            android:onClick="ButtonClick"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="="
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />
    </LinearLayout>

    <Button
        android:id="@+id/Cientifica"
        android:onClick="cientifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora cientifica" />
</LinearLayout>